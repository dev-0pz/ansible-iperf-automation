[server]
http_addr = 0.0.0.0
http_port = 3000

[security]
admin_user = admin
admin_password = {{ grafana_admin_password }}

[users]
allow_sign_up = false

[auth.anonymous]
enabled = false

[dashboards]
default_home_dashboard_path = /var/lib/grafana/dashboards/iperf3.json

[database]
type = sqlite3
path = grafana.db

[logging]
mode = console file
level = info