# iPerf3 Server Configuration
# Generated by Ansible

# Server settings
server_hostname = {{ ansible_hostname }}
server_port = {{ iperf_port }}
server_bind_address = {{ iperf_bind_address }}

# Performance settings
server_window_size = 128K
server_buffer_size = 128K

# Logging
log_file = /var/log/iperf3/server.log
verbose = 1